<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.angtft.munch"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <!-- Allow to connect with internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.angtft.munch.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.angtft.munch.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.angtft.munch.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Entry for RegisterActivity.class -->
        <activity
            android:name="com.angtft.munch.RegisterActivity"
            android:label="Register New Account" >
        </activity>

        <!-- Entry for LoginActivity.class -->
        <activity
            android:name="com.angtft.munch.DashboardActivity"
            android:label="Munch Dashboard" >
        </activity>

        <!-- Entry for LoginActivity.class -->
        <activity
            android:name="com.angtft.munch.LoginActivity"
            android:label="Login to Munch" >
        </activity>
        <activity
            android:name="com.angtft.munch.AddIngredient"
            android:label="@string/title_activity_add_ingredient" >
        </activity>
    </application>

</manifest>
