<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@layout/background"
    android:orientation="vertical" >

    <TextView 
        android:id="@+id/shoppingHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/shopping" 
        android:textColor="@color/white"
        android:textSize="20sp"/>

        <ListView
            android:id="@+id/shoppingListView"
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:layout_above="@+id/removeShoppingIngredient"
            android:layout_below="@+id/shoppingHeader"
            android:choiceMode="singleChoice"
            android:listSelector="@color/white" >

	    	</ListView>

       	<Button
       	    android:id="@+id/removeShoppingIngredient"
       	    android:layout_width="match_parent"
       	    android:layout_height="wrap_content"
       	    android:layout_alignParentBottom="true"
       	    android:layout_alignParentLeft="true"
       	    android:text="@string/removeButton" />

</RelativeLayout>
